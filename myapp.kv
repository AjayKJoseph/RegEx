<MyGrid>:

    name: name

    GridLayout:
        cols:1
        size: root.width - 200, root.height -200
        pos: 100, 100


        TextInput:
            id: name
            multiline:True
            text:root.urs

        Button:
            text:"Submit"
            on_press: root.btn()
            size_hint: 0.2, 0.1